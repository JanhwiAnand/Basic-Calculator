if (user.getFirstname().equalsIgnoreCase(request.getFirstname()) &&
        user.getLastname().equalsIgnoreCase(request.getLastname())) {
        logger.info("✅ First name and last name match for email: {}", request.getEmail());
        return true;
    } else {
        logger.warn("❌ First name or last name did not match for email: {}", request.getEmail());
        return false;
    }
