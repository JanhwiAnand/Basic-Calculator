{user?.role === 'ADMIN' && (
  <li className="nav-item">
    <NavLink className="nav-link" to="/add-employee">Add Employee</NavLink>
  </li>
)}
{user?.role === 'EMPLOYEE' && (
  <li className="nav-item">
    <NavLink className="nav-link" to="/apply-leave">Apply Leave</NavLink>
  </li>
)}

<Route
  path="/add-employee"
  element={
    token && isAdmin ? (
      <ErrorBoundary>
        <AddEmployeeForm />
      </ErrorBoundary>
    ) : (
      <Navigate to={token ? "/apply-leave" : "/login"} />
    )
  }
/>
